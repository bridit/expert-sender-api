{
  "name": "bridit/expert-sender-api",
  "description": "API for expert sender service",
  "license": "MIT",
  "authors": [
    {
      "name": "LinugaLeo",
      "email": "backend@lingualeo.com"
    },
    {
      "name": "pzelant",
      "email": "pzelant@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "psr/log": "^1.1",
    "myclabs/php-enum": "^1.5.2",
    "guzzlehttp/guzzle": "^6.0|^7.0",
    "symfony/event-dispatcher": "^5.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "nikic/iter": "^1.5.0",
    "phpstan/phpstan": "^0.12"
  },
  "autoload": {
    "psr-4": {
      "Pzelant\\ExpertSenderApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pzelant\\ExpertSenderApi\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpunit": [
      "vendor/bin/phpunit"
    ],
    "phpstan": [
      "vendor/bin/phpstan analyze src tests -c phpstan.neon --level=7"
    ],
    "test": [
      "@phpunit",
      "@phpstan"
    ]
  }
}
